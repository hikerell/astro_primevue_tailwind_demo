--- 
const { site = {} } = Astro.props;

const items = [
    {name: 'Home', href: '/#'},
    {name: 'Documention', href: '/#'},
];
const current_pathname = Astro.url.pathname.replace(/(\s|\/|\\)*$/, '');
const current_index = items.findIndex((item)=>item.href == current_pathname);
--- 
<div class="bg-neutral-800 w-full">
  <div class="container mx-auto grid grid-cols-12 items-center py-4">
    <div class="col-span-3 flex justify-start gap-4 2xl:gap-8">
      <a href="/" class="flex items-center text-white">
        <img src={site.logo} class="h-8" alt="Logo" />
        <span class="px-2 text-xl font-bold">{site.name}</span>
      </a>
    </div>
    <div class="col-span-6 flex items-center justify-center gap-4 2xl:gap-8 text-xl">
        { items.map((item, index)=>
        current_index == index ?
        <a href={item.href} class="block rounded-md px-4 py-2 shadow bg-primary-700 font-bold text-white">
            {item.name}
        </a>
        :
        <a href={item.href} class="block rounded-md px-4 py-2 transition duration-50 ease-in hover:bg-primary-700 text-white">
            {item.name}
        </a>
        )}
    </div>
    <div class="col-span-3 flex justify-end gap-4 2xl:gap-8">
      <a href={site.developer.twitter} class="flex gap-2 items-center bg-neutral-200 hover:bg-neutral-100 rounded-xl px-2 py-2">
        <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-7 w-7"
        fill="currentColor"
        style="color: #1da1f2"
        viewBox="0 0 24 24">
        <path
          d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z" />
      </svg>
      <span>
        Follow {site.developer.name}
      </span>
      </a>
    </div>
  </div>
</div>
